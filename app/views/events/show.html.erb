  <div class="group_box_title">Presentations:</div>
  <div class="group_box_content">
    <table class="datatable">
      <tr>
        <th>name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <%= render :partial => 'presentations/presentation', :collection => @event.presentations%>
    </table>
  </div>
</div>

