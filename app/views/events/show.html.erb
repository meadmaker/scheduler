<% content_for :page_title do %>
<%= @event.name %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Start:</b>
  <%= @event.start %>
</p>

<p>
  <b>Stop:</b>
  <%= @event.stop %>
</p>

